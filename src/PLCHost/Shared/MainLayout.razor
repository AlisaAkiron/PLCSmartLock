@inherits LayoutComponentBase

<MApp>
    <MAppBar
        App
        Color="#6A76AB"
        Dark>

        <!-- 顶部选单 -->
        <ChildContent>
            <MAppBarNavIcon></MAppBarNavIcon>
            <MAppBarTitle>PLC Smart Lock Dashboard</MAppBarTitle>
        </ChildContent>

        <ExtensionContent>
            <MTabs
                SliderColor="white"
                AlignWithTitle>

                @foreach (var (k, v) in _items)
                {
                    <MTab Href="@v">@k</MTab>
                }

            </MTabs>
        </ExtensionContent>

    </MAppBar>

    <MMain>
        <MContainer Style="min-height: 100%">
            @Body
        </MContainer>
    </MMain>

    <MFooter App Padless Fixed>
        <MCol Class="text-center" Cols="12">
            @DateTime.Now.Year - <strong>Liam Sho</strong>
        </MCol>
    </MFooter>
</MApp>

@code {

    readonly Dictionary<string, string> _items = new()
    {
        { "主页", "/" },
        { "PLC", "/plc" },
        { "配置", "/config" },
        { "监控", "/monitor" }
    };

}
